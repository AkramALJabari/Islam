<!DOCTYPE html>
<html lang="en">

  <head>
    <title>موقع الإسلام | قصص الأنبياء</title>
    <link rel="stylesheet" href="../css/home.css">
    <%- include('./partials/head.ejs') %>
    <style>
      .stories {
        font-size: 1.50rem !important;
        font-weight: 600;
        margin-top: 40px;
        direction: rtl;
      }

      .stories>span {
        color: #b56400;
      }

      .stories>ul {
        color: #b56400;
        list-style: inside;
      }

      hr {
        border: 3px solid #7a4400;
        border-radius: 10px;
        margin: 20px 0 20px 0;
      }
    </style>
  </head>

  <body onload="myFunction()">
    <%- include('./partials/loading.ejs') %>
    <div style="display:none;" id="myDiv" class="animate-bottom">
      <%- include('./partials/menu.ejs') %>
      <%- include('./partials/navbar.ejs') %>
      <section class="cards nbw" id="services" style="padding-bottom: 50px;">
        <div class="content" style="flex-direction: column;align-items: center;padding-top: 50px">
          <% if(!storiePage){ %>
          <div class="card">
            <div class="icon">
              <i class="fa-duotone fa-books" aria-hidden="true"></i>
            </div>
            <div class="info">
              <h3>قصص الأنبياء</h3>
              <div class="stories">
                <% stories.forEach(storie => { %>
                <%= storie.name %><br>
                <% if(storie.name.includes(`قريبًا`)){ %>
                <a class="main-btn" style="font-size: 0.6em;margin-bottom: 0;cursor: no-drop;">عرض
                  المزيد</a>
                <% }else{ %>
                <a href="/prophets-stories=<%= storie.name %>" class="main-btn"
                  style="font-size: 0.6em;margin-bottom: 0;">عرض
                  المزيد</a>
                <% } %>
                <hr>
                <% }) %>
                <span>قريبًا المزيد من القصص ...</span>
              </div>
            </div>
          </div>
          <% } %>
          <% if(storiePage){ %>
          <div class="card">
            <div class="icon">
              <i class="fa-duotone fa-books" aria-hidden="true"></i>
            </div>
            <div class="info">
              <h3 id="titlepagestories"><%= storiePage %></h3>
              <script>
                document.title = `موقع الإسلام | ` + document.getElementById('titlepagestories').innerHTML;
              </script>
              <div class="stories">
                <% stories.forEach(storie => { %>

                <% if(storie.name !== storiePage)return %>
                <span><%= storie.stories1 %></span>
                <% if(storie.stories2){ %>
                <br><br>
                <span><%= storie.stories2 %></span>
                <% } %>
                <% if(storie.stories3){ %>
                <br><br>
                <span><%= storie.stories3 %></span>
                <% } %>
                <ul>
                  <% if(storie.li1){ %>
                  <br><br>
                  <li><%= storie.li1 %></li>
                  <% } %>
                  <% if(storie.li2){ %>
                  <br><br>
                  <li><%= storie.li2 %></li>
                  <% } %>
                  <% if(storie.li3){ %>
                  <br><br>
                  <li><%= storie.li3 %></li>
                  <% } %>
                  <% if(storie.li4){ %>
                  <br><br>
                  <li><%= storie.li4 %></li>
                  <% } %>
                  <% if(storie.li5){ %>
                  <br><br>
                  <li><%= storie.li5 %></li>
                  <% } %>
                  <% if(storie.li6){ %>
                  <br><br>
                  <li><%= storie.li6 %></li>
                  <% } %>
                  <% if(storie.li7){ %>
                  <br><br>
                  <li><%= storie.li7 %></li>
                  <% } %>
                </ul>

                <% }) %>
                <br><br>
                <a href="/prophets-stories" class="main-btn" style="font-size: 0.7em;margin-bottom: 0;">الرجوع للخلف</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </section>
      <script src="./js/main.js" type="text/javascript"></script>
    </div>
  </body>

</html>